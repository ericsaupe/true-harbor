<%= render partial: "devise/shared/page_title" %>

<div>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-6" }, data: { turbo: false }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div class="shadow sm:rounded-md sm:overflow-hidden">
      <div class="px-4 py-5 bg-white space-y-6 sm:p-6">
        <div>
          <%= f.label :password, "New password", class: "block font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 mt-1 block w-full border-gray-300 rounded-md", required: true %>
          </div>
          <% if @minimum_password_length %>
            <p class="mt-2 text-gray-500">
              <%= @minimum_password_length %> characters minimum
            </p>
          <% end %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirm new password", class: "block font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 mt-1 block w-full border-gray-300 rounded-md", required: true %>
          </div>
        </div>
      </div>

      <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
        <%= f.submit "Change my password", class: "w-full flex justify-center py-2 px-4 border border-transparent shadow-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
      </div>
    </div>
  <% end %>
</div>
