<% selected = local_assigns[:selected] || family.searches.find_by(id: search.id).present? %>
<li
  class="group relative cursor-default select-none py-2 pl-3 pr-9 text-gray-900 hover:text-white hover:bg-pink-600 hover:cursor-pointer"
  id="<%= dom_id(family) %>"
  role="option"
  tabindex="-1"
  data-selected="<%= selected %>"
  data-family-id="<%= family.id %>"
  data-action="click->combo-search#select">
  <span class="block truncate <%= "font-semibold" if selected %>"><%= family.name %></span>

  <% if selected %>
    <span class="absolute inset-y-0 right-0 flex items-center pr-4 text-pink-600">
      <svg class="h-5 w-5 group-hover:stroke-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
      </svg>
    </span>
  <% end %>
</li>
