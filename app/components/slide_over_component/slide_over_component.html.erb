<div class="relative z-10 -translate-x-full" aria-labelledby="slide-over-title" role="dialog" aria-modal="true" data-slide-over-target="container">
  <!-- Background backdrop, show/hide based on slide-over state. -->
  <div class="fixed inset-0 -translate-x-full" data-slide-over-target="backdrop"></div>

  <div class="fixed inset-0 overflow-hidden" data-slide-over-target="panel">
    <div class="absolute inset-0 overflow-hidden">
      <div class="pointer-events-none fixed inset-y-0 right-0 flex max-w-full pl-10 sm:pl-16">
        <div class="pointer-events-auto w-screen max-w-2xl" data-slide-over-target="panel">
          <div class="flex h-full flex-col overflow-y-scroll bg-white py-6 shadow-xl">
            <div class="px-4 sm:px-6">
              <div class="flex items-start justify-between">
                <h2 class="text-lg font-medium text-gray-900" id="slide-over-title">Family Information</h2>
                <div class="ml-3 flex h-7 items-center">
                  <button data-action="slide-over#slideOut" type="button" class="rounded-md bg-white text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                    <span class="sr-only">Close panel</span>
                    <!-- Heroicon name: outline/x-mark -->
                    <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                  </button>
                </div>
              </div>
            </div>
            <div class="relative mt-6 flex-1 px-4 sm:px-6" data-slide-over-target="panelContent">
              <%= render(LoadingComponent.new()) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
