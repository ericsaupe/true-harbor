<li id="<%= dom_id note %>">
  <div class="relative pb-8">
    <% unless note.noteable.notes.order(created_at: :desc).last.id == note.id %>
      <span class="absolute top-5 left-5 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
    <% end %>
    <div class="relative flex items-start space-x-3">
      <div class="relative">
        <svg class="inline-block h-10 w-10 rounded-full bg-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0012 15.75a7.488 7.488 0 00-5.982 2.975m11.963 0a9 9 0 10-11.963 0m11.963 0A8.966 8.966 0 0112 21a8.966 8.966 0 01-5.982-2.275M15 9.75a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>

        <span class="absolute -bottom-0.5 -right-1 rounded-tl bg-white px-0.5 py-px">
          <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 2c-2.236 0-4.43.18-6.57.524C1.993 2.755 1 4.014 1 5.426v5.148c0 1.413.993 2.67 2.43 2.902.848.137 1.705.248 2.57.331v3.443a.75.75 0 001.28.53l3.58-3.579a.78.78 0 01.527-.224 41.202 41.202 0 005.183-.5c1.437-.232 2.43-1.49 2.43-2.903V5.426c0-1.413-.993-2.67-2.43-2.902A41.289 41.289 0 0010 2zm0 7a1 1 0 100-2 1 1 0 000 2zM8 8a1 1 0 11-2 0 1 1 0 012 0zm5 1a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
          </svg>
        </span>
      </div>
      <div class="min-w-0 flex-1">
        <div>
          <div class="text-sm font-medium text-gray-900">
            <%= note.user&.display_name %>
          </div>
          <p class="mt-0.5 text-sm text-gray-500">Commented <%= note.created_at.strftime("%-m/%-d/%y %-l:%M %p") %></p>
        </div>
        <div class="mt-2 text-sm text-gray-700">
          <p><%= note.content %></p>
        </div>
      </div>
    </div>
  </div>
</li>
