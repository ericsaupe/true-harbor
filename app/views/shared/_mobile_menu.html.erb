<div class="relative z-40 md:hidden" role="dialog" aria-modal="true">
  <div data-mobile-menu-target="backdrop" class="fixed inset-0 bg-gray-600 bg-opacity-0 -translate-x-full"></div>

  <div data-mobile-menu-target="container" class="fixed inset-0 z-40 flex -translate-x-full">
    <div class="relative flex w-full max-w-xs flex-1 flex-col bg-pink-50">
      <div class="absolute top-0 right-0 -mr-12 pt-2">
        <button data-action="mobile-menu#closeMenu" type="button" class="ml-1 flex h-10 w-10 items-center justify-center rounded-full focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white">
          <span class="sr-only">Close sidebar</span>
          <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <div class="h-0 flex-1 overflow-y-auto pt-5 pb-4">
        <div class="flex flex-shrink-0 items-center px-4">
          <%= image_tag "logo.png", class: "h-8 w-auto", alt: "True Harbor" %>
        </div>
        <nav class="mt-5 space-y-1 px-2">
          <% if current_user %>
            <%= link_to searches_path, class: mobile_menu_classes(controller: "searches") do %>
              <svg class="text-gray-400 group-hover:text-gray-500 mr-4 flex-shrink-0 h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
              </svg>
              Searches
            <% end %>
            <%= link_to families_path, class: mobile_menu_classes(controller: "families") do %>
              <svg class="text-gray-500 mr-4 flex-shrink-0 h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
              </svg>
              Families
            <% end %>
            <% if can?(:index, :analytic) %>
              <%= link_to analytics_path, class: mobile_menu_classes(controller: "analytics") do %>
                <svg class="text-gray-500 mr-4 flex-shrink-0 h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 6a7.5 7.5 0 107.5 7.5h-7.5V6z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 10.5H21A7.5 7.5 0 0013.5 3v7.5z" />
                </svg>
                Analytics
              <% end %>
            <% end %>
            <% if current_user.admin? %>
              <%= link_to admin_root_path, class: mobile_menu_classes(controller: "admin") do %>
                <svg class="text-gray-500 mr-4 flex-shrink-0 h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 3v1.5M4.5 8.25H3m18 0h-1.5M4.5 12H3m18 0h-1.5m-15 3.75H3m18 0h-1.5M8.25 19.5V21M12 3v1.5m0 15V21m3.75-18v1.5m0 15V21m-9-1.5h10.5a2.25 2.25 0 002.25-2.25V6.75a2.25 2.25 0 00-2.25-2.25H6.75A2.25 2.25 0 004.5 6.75v10.5a2.25 2.25 0 002.25 2.25zm.75-12h9v9h-9v-9z" />
                </svg>
                Admin
              <% end %>
            <% end %>
            <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: mobile_menu_classes(controller: "devise") do %>
              <svg class="text-gray-400 group-hover:text-gray-500 mr-4 flex-shrink-0 h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
              </svg>
              Sign out
            <% end %>
          <% end %>
        </nav>
      </div>
      <div class="flex flex-shrink-0 border-t border-pink-200 p-4 bg-pink-100 hover:bg-white">
        <% if current_user %>
          <%= link_to edit_user_registration_path, data: { turbo: false }, class: "group block flex-shrink-0" do %>
            <div class="flex items-center">
              <div>
                <svg class="inline-block h-10 w-10 rounded-full" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0012 15.75a7.488 7.488 0 00-5.982 2.975m11.963 0a9 9 0 10-11.963 0m11.963 0A8.966 8.966 0 0112 21a8.966 8.966 0 01-5.982-2.275M15 9.75a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-base font-medium text-gray-700 group-hover:text-gray-900"><%= current_user.display_name %></p>
                <p class="text-sm font-medium text-gray-500 group-hover:text-gray-700">View profile</p>
              </div>
            </div>
          <% end %>
        <% else %>
          <%= link_to new_user_session_path, data: { turbo: false }, class: "group block flex-shrink-0" do %>
            <div class="flex items-center">
              <div>
                <svg class="inline-block h-10 w-10 rounded-full" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0012 15.75a7.488 7.488 0 00-5.982 2.975m11.963 0a9 9 0 10-11.963 0m11.963 0A8.966 8.966 0 0112 21a8.966 8.966 0 01-5.982-2.275M15 9.75a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-gray-700 group-hover:text-gray-900">Sign In</p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="w-14 flex-shrink-0">
      <!-- Force sidebar to shrink to fit close icon -->
    </div>
  </div>
</div>
