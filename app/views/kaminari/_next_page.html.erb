<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote -%>
<% unless current_page.last? %>
  <%= link_to url, rel: "next", remote: remote, class: "border-t-2 border-transparent py-4 pr-1 inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300" do %>
    Next
    <i class="fa-solid fa-angle-right ml-1 text-xs"></i>
  <% end %>
<% end %>
