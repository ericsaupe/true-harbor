<%# Link to the "First" page
  - available local variables
    url:           url to the first page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote -%>
<% unless current_page.first? %>
  <%= link_to url, remote: remote, class: "border-t-2 border-transparent py-4 px-4 inline-flex items-center text-sm font-medium text-pink-500 hover:text-pink-700 hover:border-pink-300" do %>
    <i class="fa-solid fa-angles-left mr-1 text-xs"></i>
    First
  <% end %>
<% end %>
