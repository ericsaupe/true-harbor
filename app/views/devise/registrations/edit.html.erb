<div>
  <h1 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
    Settings
  </h1>
</div>

<div class="mt-5 md:mt-0">
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, data: { turbo: false }) do |f| %>
    <div class="shadow sm:rounded-md sm:overflow-hidden">
      <div class="px-4 py-5 bg-white space-y-6 sm:p-6">
        <div>
          <%= f.label :first_name, "First name", class: "block font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.text_field :first_name, class: "shadow-sm focus:ring-pink-500 focus:border-pink-500 mt-1 block w-full border-gray-300 rounded-md" %>
          </div>
        </div>
        <div>
          <%= f.label :last_name, "Last name", class: "block font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.text_field :last_name, class: "shadow-sm focus:ring-pink-500 focus:border-pink-500 mt-1 block w-full border-gray-300 rounded-md" %>
          </div>
        </div>
      </div>
      <div class="px-4 py-5 bg-white space-y-6 sm:p-6">
        <div>
          <%= f.label :email, class: "block font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.email_field :email, autocomplete: "email", class: "shadow-sm focus:ring-pink-500 focus:border-pink-500 mt-1 block w-full border-gray-300 rounded-md", required: true %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
        </div>

        <div>
          <%= f.label :password, "New password", class: "block font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.password_field :password, class: "shadow-sm focus:ring-pink-500 focus:border-pink-500 mt-1 block w-full border-gray-300 rounded-md" %>
            <em class="mt-2 text-gray-500">(leave blank if you don't want to change it)</em>
            <% if @minimum_password_length %>
              <br>
              <em class="mt-2 text-gray-500"><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>
        </div>

        <div>
          <%= f.label :password_confirmation, "New password confirmation", class: "block font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.password_field :password_confirmation, class: "shadow-sm focus:ring-pink-500 focus:border-pink-500 mt-1 block w-full border-gray-300 rounded-md" %>
          </div>
        </div>

        <div>
          <%= f.label :current_password, class: "block font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.password_field :current_password, class: "shadow-sm focus:ring-pink-500 focus:border-pink-500 mt-1 block w-full border-gray-300 rounded-md", required: true %>
          </div>
        </div>
      </div>

      <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
        <%= f.submit "Update", class: "flex justify-center py-2 px-4 border border-transparent shadow-sm font-medium rounded-md text-white bg-pink-600 hover:bg-pink-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pink-500 cursor-pointer" %>
      </div>
    </div>
  <% end %>

  <%= button_to "Delete my account", registration_path(resource_name), method: :delete, form: { data: { turbo_confirm: "Are you sure? This will unsubscribe you from all active subscriptions and any subscribers you have to your subscription plans." } }, class: "cursor-pointer bg-red-300 hover:bg-red-500 text-sm text-white font-bold py-1 px-2 rounded mt-2" %>
  <p>Geolocation service provided by <%= link_to "Geoapify", "https://www.geoapify.com/", class: "text-pink-700" %>.</p>
</div>
